---
import classNames from "classnames";

import Layout from "../layouts/Layout.astro";
import IconButton from "../components/IconButton.astro";
---

<Layout title="Will Nelson">
	<main
		class={classNames([
			"flex",
			"flex-col",
			"justify-center",
			"grow",
			"ma",
			"px-4",
			"max-w-2xl",
		])}
	>
		<h1 class="text-6xl font-bold leading-tight">
			Hi, I'm <span class="text-gradient">Will</span>!
		</h1>
		<h2 class="font-light text-2xl">Software Engineer @ Discord</h2>
		<ul role="list" class="flex gap-4 mt-12">
			<IconButton
				href="mailto:me@wnelson.dev"
				iconClass="i-fa-solid-at hover:bg-violet-700"
			/>
			<IconButton
				href="https://github.com/appellation"
				iconClass="i-fa-brands-github hover:bg-[#2da44e]"
			/>
			<IconButton
				href="https://linkedin.com/in/williamonelson"
				iconClass="i-fa-brands-linkedin hover:bg-[#0077B5]"
			/>
			<IconButton
				href="https://twitter.com/appelation_"
				iconClass="i-fa-brands-twitter hover:bg-[#1DA1F2]"
			/>
			<IconButton
				href="https://keybase.io/appellation"
				iconClass="i-fa-brands-keybase hover:bg-[#ff6f21]"
			/>
		</ul>
	</main>
</Layout>

<style>
	:root {
		--astro-gradient: linear-gradient(0deg, #355aee, #5be687);
	}

	.text-gradient {
		font-weight: 900;
		background-image: var(--astro-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		background-position-y: 100%;
		border-radius: 0.4rem;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%,
		100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}
</style>
