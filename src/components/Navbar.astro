---
import Link from "./Link";

const segment = Astro.url.pathname.split("/").find(Boolean);
const words = (segment || "").split("-");
const title = words.map((word) => word.charAt(0).toUpperCase() + word.slice(1)).join(" ");
---

<div
	class="mt-6 mb-12 text-lg text-stone-600 dark:text-stone-400 flex items-center gap-4"
>
	<a class="i-bi-folder-fill inline-block" href="/"></a>
	<div>/</div>
	<Link href={`/${segment}`}>{title}</Link>
</div>
